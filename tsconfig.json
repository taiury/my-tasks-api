{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": "src",
    "types": ["./src/types", "jest"],
    "rootDirs": ["src", "tests"],
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["dist"]
}
